---
/**
 * Props:
 * - title: heading above the stats block
 * - stats: array of { label: string; value: string | number }
 * - variant: "neutral" | "info" | "success" | "warning" | "danger"
 */
const { stats = [], title = "Key Figures", variant = "neutral" } = Astro.props;
const headingId = title.replace(/\s+/g, "-").toLowerCase();
---

<section
  class={`pg-stat-box pg-stat-box--${variant}`}
  role="region"
  aria-labelledby={headingId}
>
  <h4 id={headingId} class="pg-stat-box__title">{title}</h4>

  {stats.length > 0 && (
    <ul class="pg-stat-box__list">
      {stats.map(({ label, value }) => (
        <li class="pg-stat-box__item">
          <span class="pg-stat-box__label">{label}</span>
          <span class="pg-stat-box__value">{value}</span>
        </li>
      ))}
    </ul>
  )}

  <div class="pg-stat-box__content">
    <slot />
  </div>
</section>

<style>
  .pg-stat-box {
    border-left: 4px solid var(--pg-border);
    border-radius: 0 var(--pg-radius-lg) var(--pg-radius-lg) 0;
    padding: var(--pg-space-4) var(--pg-space-5);
    margin: var(--pg-space-6) 0;
    background: var(--pg-surface-soft);
  }

  /* Variants */
  .pg-stat-box--neutral {
    border-color: var(--pg-border-muted);
    background: var(--pg-surface-soft);
  }

  .pg-stat-box--info {
    border-color: var(--pg-summary-border);
    background: var(--pg-summary-bg);
  }

  .pg-stat-box--success {
    border-color: var(--pg-risk-low-border);
    background: var(--pg-risk-low-bg);
  }

  .pg-stat-box--warning {
    border-color: var(--pg-risk-moderate-border);
    background: var(--pg-risk-moderate-bg);
  }

  .pg-stat-box--danger {
    border-color: var(--pg-risk-high-border);
    background: var(--pg-risk-high-bg);
  }

  .pg-stat-box__title {
    font-size: var(--pg-text-lg);
    font-weight: 600;
    color: var(--pg-text);
    margin: 0 0 var(--pg-space-3);
  }

  .pg-stat-box__list {
    display: flex;
    flex-direction: column;
    gap: var(--pg-space-2);
    margin: 0 0 var(--pg-space-3);
    padding: 0;
    list-style: none;
  }

  .pg-stat-box__item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--pg-space-4);
    font-size: var(--pg-text-sm);
  }

  .pg-stat-box__label {
    color: var(--pg-text-soft);
  }

  .pg-stat-box__value {
    font-weight: 600;
    color: var(--pg-text);
  }

  .pg-stat-box__content {
    font-size: var(--pg-text-sm);
    color: var(--pg-text-soft);
    line-height: var(--pg-leading-relaxed);
  }

  .pg-stat-box__content:empty {
    display: none;
  }
</style>

