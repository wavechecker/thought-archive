---
/**
 * Minimal JSON-LD component for MDX.
 * Usage in MDX:
 *   import JsonLd from "../../components/JsonLd.astro"
 *   <JsonLd>{JSON.stringify({ "@context": "https://schema.org", ... })}</JsonLd>
 */
const { children } = Astro.props;
const json = typeof children === "string" ? children : JSON.stringify(children);
---
<script type="application/ld+json" set:html={json}></script>

