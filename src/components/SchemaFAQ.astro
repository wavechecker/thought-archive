---
/**
 * SchemaFAQ.astro
 * 
 * Lightweight Astro component for embedding FAQPage JSON-LD markup.
 * 
 * Props:
 * - mainEntity: Array of { question: string, answer: string }
 * 
 * Example:
 * <SchemaFAQ
 *   mainEntity={[
 *     { question: "Is creatine safe?", answer: "Yes, itâ€™s one of the most researched supplements." },
 *     { question: "Do I take it daily?", answer: "Yes, consistency matters more than timing." }
 *   ]}
 * />
 */

const { mainEntity = [] } = Astro.props;

const data = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: mainEntity.map((q) => ({
    "@type": "Question",
    name: q.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: q.answer
    }
  }))
};
---

<script type="application/ld+json">
  {JSON.stringify(data, null, 2)}
</script>
