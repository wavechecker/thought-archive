---
interface Props {
  /** The question displayed in the summary */
  q: string;
  /** The answer text revealed on toggle */
  a: string;
}

const { q, a } = Astro.props;
---

<details class="group my-4 rounded-xl border border-gray-200 bg-gray-50/60 p-4 open:bg-white shadow-sm transition-colors duration-200">
  <summary
    class="cursor-pointer select-none text-base font-semibold text-gray-800 marker:hidden outline-none group-open:text-blue-600"
  >
    {q}
  </summary>

  <div class="mt-3 text-gray-700 leading-relaxed">
    {a}
  </div>
</details>

<style>
  summary::-webkit-details-marker {
    display: none;
  }
</style>
