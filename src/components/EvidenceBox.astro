---
const { title, date, source, findings = [] } = Astro.props;
---

<aside class="pg-evidence-box" role="note">
  <div class="pg-evidence-box__icon" aria-hidden="true">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
      <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
    </svg>
  </div>
  <div class="pg-evidence-box__content">
    <h4 class="pg-evidence-box__title">{title}</h4>
    {(source || date) && (
      <p class="pg-evidence-box__source">
        {source}{source && date ? " â€” " : ""}{date}
      </p>
    )}
    {findings.length > 0 && (
      <ul class="pg-evidence-box__findings">
        {findings.map((f) => <li set:html={f} />)}
      </ul>
    )}
  </div>
</aside>

<style>
  .pg-evidence-box {
    display: flex;
    gap: var(--pg-space-4);
    background: var(--pg-summary-bg);
    border-left: 4px solid var(--pg-summary-border);
    border-radius: 0 var(--pg-radius-lg) var(--pg-radius-lg) 0;
    padding: var(--pg-space-4) var(--pg-space-5);
    margin: var(--pg-space-6) 0;
  }

  .pg-evidence-box__icon {
    flex-shrink: 0;
    color: var(--pg-summary-icon);
    margin-top: 2px;
  }

  .pg-evidence-box__content {
    flex: 1;
    min-width: 0;
  }

  .pg-evidence-box__title {
    font-size: var(--pg-text-base);
    font-weight: 600;
    color: var(--pg-summary-title);
    margin: 0 0 var(--pg-space-1);
  }

  .pg-evidence-box__source {
    font-size: var(--pg-text-xs);
    color: var(--pg-text-muted);
    margin: 0 0 var(--pg-space-3);
  }

  .pg-evidence-box__findings {
    margin: 0;
    padding-left: var(--pg-space-5);
    font-size: var(--pg-text-sm);
    color: var(--pg-text-soft);
    line-height: var(--pg-leading-relaxed);
  }

  .pg-evidence-box__findings li {
    margin-bottom: var(--pg-space-1);
  }

  .pg-evidence-box__findings li:last-child {
    margin-bottom: 0;
  }
</style>
