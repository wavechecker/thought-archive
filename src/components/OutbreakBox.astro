---
import * as datasets from "@/data/outbreaks/index.ts";

// Defensive date formatting
const fmtDate = (d: Date, locale = "en-US") =>
  d.toLocaleDateString(locale, { year: "numeric", month: "long", day: "numeric" });
const isValidDate = (d: Date) => !isNaN(d.getTime());

type Props = {
  dataKey: keyof typeof datasets;
  year?: number;
  locale?: string;
};

const { dataKey, year, locale = "en-US" } = Astro.props as Props;
const data = (datasets as any)[dataKey] as import("@/data/outbreaks/index.ts").OutbreakDataset;

if (!data) throw new Error(`OutbreakBox: dataset "${String(dataKey)}" not found.`);

const rows = data.series.slice().sort((a, b) => a.year - b.year);
const selected = year ? rows.find(r => r.year === year) : rows[rows.length - 1];

if (!selected) throw new Error(`OutbreakBox: no data available for ${year ?? "latest year"}.`);

const last = new Date(selected.lastUpdated);
const safeLast = isValidDate(last) ? fmtDate(last, locale) : selected.lastUpdated;

const hasOutbreaks = typeof selected.outbreaksInvestigated === "number";
---

<aside class="pg-outbreak-box" role="alert">
  <div class="pg-outbreak-box__icon" aria-hidden="true">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
      <line x1="12" y1="9" x2="12" y2="13"></line>
      <line x1="12" y1="17" x2="12.01" y2="17"></line>
    </svg>
  </div>
  <div class="pg-outbreak-box__content">
    <h4 class="pg-outbreak-box__title">
      {data.condition} {selected.year} â€” {data.region}
    </h4>
    <ul class="pg-outbreak-box__stats">
      <li>
        <span class="pg-outbreak-box__label">Confirmed cases</span>
        <span class="pg-outbreak-box__value">{selected.confirmedCases.toLocaleString()}</span>
      </li>
      {hasOutbreaks && (
        <li>
          <span class="pg-outbreak-box__label">Outbreaks investigated</span>
          <span class="pg-outbreak-box__value">{selected.outbreaksInvestigated}</span>
        </li>
      )}
      <li>
        <span class="pg-outbreak-box__label">Last updated</span>
        <span class="pg-outbreak-box__value">{safeLast}</span>
      </li>
    </ul>
    <p class="pg-outbreak-box__source">
      Source: {selected.sourceUrl
        ? <a href={selected.sourceUrl} target="_blank" rel="noopener noreferrer">{selected.sourceName}</a>
        : data.series[0]?.sourceName}
    </p>
  </div>
</aside>

<style>
  .pg-outbreak-box {
    display: flex;
    gap: var(--pg-space-4);
    background: var(--pg-risk-high-bg);
    border-left: 4px solid var(--pg-risk-high-border);
    border-radius: 0 var(--pg-radius-lg) var(--pg-radius-lg) 0;
    padding: var(--pg-space-4) var(--pg-space-5);
    margin: var(--pg-space-6) 0;
  }

  .pg-outbreak-box__icon {
    flex-shrink: 0;
    color: var(--pg-risk-high-text);
    margin-top: 2px;
  }

  .pg-outbreak-box__content {
    flex: 1;
    min-width: 0;
  }

  .pg-outbreak-box__title {
    font-size: var(--pg-text-base);
    font-weight: 600;
    color: var(--pg-risk-high-text);
    margin: 0 0 var(--pg-space-3);
  }

  .pg-outbreak-box__stats {
    display: flex;
    flex-direction: column;
    gap: var(--pg-space-2);
    margin: 0 0 var(--pg-space-3);
    padding: 0;
    list-style: none;
  }

  .pg-outbreak-box__stats li {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--pg-space-4);
    font-size: var(--pg-text-sm);
  }

  .pg-outbreak-box__label {
    color: var(--pg-text-soft);
  }

  .pg-outbreak-box__value {
    font-weight: 600;
    color: var(--pg-text);
  }

  .pg-outbreak-box__source {
    font-size: var(--pg-text-xs);
    color: var(--pg-text-muted);
    font-style: italic;
    margin: 0;
  }

  .pg-outbreak-box__source a {
    color: var(--pg-link);
  }
</style>

