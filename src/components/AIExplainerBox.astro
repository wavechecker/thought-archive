---
export interface Props {
  title?: string;
}

const { title = "AI Explainer" } = Astro.props as Props;
---

<section class="pg-ai-explainer" role="note" aria-label={title}>
  <header class="pg-ai-explainer__header">
    <h3 class="pg-ai-explainer__title">{title}</h3>
  </header>

  <div class="pg-ai-explainer__content">
    <slot />
  </div>
</section>

<style>
  .pg-ai-explainer {
    background: var(--pg-summary-bg);
    border-left: 4px solid var(--pg-summary-border);
    border-radius: 0 var(--pg-radius-lg) var(--pg-radius-lg) 0;
    padding: var(--pg-space-4) var(--pg-space-5);
    margin: var(--pg-space-6) 0;
  }

  .pg-ai-explainer__header {
    margin-bottom: var(--pg-space-3);
  }

  .pg-ai-explainer__title {
    font-size: var(--pg-text-base);
    font-weight: 600;
    color: var(--pg-summary-title);
    margin: 0;
  }

  .pg-ai-explainer__content {
    font-size: var(--pg-text-sm);
    color: var(--pg-text-soft);
    line-height: var(--pg-leading-relaxed);
  }

  .pg-ai-explainer__content :global(p) {
    margin: 0 0 var(--pg-space-2);
  }

  .pg-ai-explainer__content :global(p:last-child) {
    margin-bottom: 0;
  }

  .pg-ai-explainer__content :global(ul) {
    margin: 0 0 var(--pg-space-2);
    padding-left: var(--pg-space-5);
  }

  .pg-ai-explainer__content :global(ul:last-child) {
    margin-bottom: 0;
  }

  .pg-ai-explainer__content :global(li) {
    margin-bottom: var(--pg-space-1);
  }

  .pg-ai-explainer__content :global(li:last-child) {
    margin-bottom: 0;
  }
</style>
