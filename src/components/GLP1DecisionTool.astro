---
const result = Astro.request?.query?.result;
---

<div class="p-6 rounded-2xl bg-blue-50 border border-blue-200 shadow-sm">
  <h3 class="text-lg font-semibold text-blue-900">GLP-1 Decision Tool</h3>
  <p class="text-sm text-blue-800 mt-1">
    Answer the questions to get an instant recommendation.
  </p>

  <form method="get" class="mt-4 space-y-4">
    <div>
      <label class="block text-sm font-medium">What is your primary goal?</label>
      <select name="goal" class="mt-1 p-2 border rounded w-full">
        <option value="weight">Significant weight loss</option>
        <option value="insulin">Improve insulin resistance</option>
        <option value="mild">Mild weight loss / appetite control</option>
        <option value="muscle">Recomposition / muscle focus</option>
      </select>
    </div>

    <div>
      <label class="block text-sm font-medium">BMI Range</label>
      <select name="bmi" class="mt-1 p-2 border rounded w-full">
        <option value="30plus">BMI 30+</option>
        <option value="27plus">BMI 27+ with metabolic issues</option>
        <option value="under27">Under 27</option>
      </select>
    </div>

    <button
      type="submit"
      class="mt-3 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
    >
      Get Recommendation
    </button>
  </form>

  {result && (
    <div class="mt-6 p-4 rounded-xl bg-white border shadow-sm">
      <h4 class="font-semibold">Recommendation:</h4>
      <p class="mt-2 text-sm text-slate-700">
        {result}
      </p>
    </div>
  )}
</div>
