---
const url = new URL(Astro.url);
const fm = Astro.props.frontmatter ?? {};

// Canonical: use frontmatter if provided, else self URL
const canonicalUrl = fm.canonical ?? url.href;

// Site origin for absolute assets
const siteOrigin = "https://patientguide.io";

// OG/Twitter image (absolute)
const ogImage = fm.image ?? "/og-default.png";
const ogImageAbs = ogImage.startsWith("http") ? ogImage : `${siteOrigin}${ogImage}`;

const title = fm.title ?? "Untitled";
const description = fm.description ?? "";

// Structured data: Article
const jsonLdObj = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description || undefined,
  "datePublished": fm.publishDate ?? undefined,
  "dateModified": fm.updatedDate ?? fm.publishDate ?? undefined,
  "author": { "@type": "Organization", "name": "Thought Archive" },
  "mainEntityOfPage": canonicalUrl,
  "image": ogImageAbs
};
const jsonLd = JSON.stringify(jsonLdObj);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Structured data -->
    <script type="application/ld+json">{jsonLd}</script>

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageAbs} />
    <meta property="og:site_name" content="PatientGuide.io" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageAbs} />
  </head>

  <body>
    <main class="prose max-w-3xl mx-auto px-4 py-8">
      <h1>{title}</h1>

      <!-- Optional hero image -->
      <img
        src={ogImage}
        alt={title}
        style="width:100%; height:auto; aspect-ratio:1200/630; object-fit:cover; border-radius:12px; margin-top:1rem;"
      />

      <slot />
    </main>
  </body>
</html>

