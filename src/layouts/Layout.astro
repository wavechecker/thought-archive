---
import "@/styles/global.css";

const { frontmatter = {} } = Astro.props;
const {
  title = "Thought Archive",
  description = "",
  image = "/og-default.png",
  canonical, // optional in frontmatter
} = frontmatter;

// Build canonical URL: prefer frontmatter, else fallback to self
const selfUrl = new URL(Astro.url).href;
const canonicalUrl = canonical ?? selfUrl;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={image} />

    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="min-h-screen bg-white text-slate-900 antialiased">
    <header class="w-full border-b border-slate-200">
      <div class="mx-auto max-w-3xl px-4 py-4">
        <a href="/" class="font-semibold">Thought Archive</a>
      </div>
    </header>

    <main class="mx-auto max-w-3xl px-4 py-8">
      <slot />
    </main>

    <footer class="w-full border-t border-slate-200">
      <div class="mx-auto max-w-3xl px-4 py-6 text-sm text-slate-500">
        Â© {new Date().getFullYear()} Thought Archive
      </div>
    </footer>
  </body>
</html>
