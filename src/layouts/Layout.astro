---
/** Top‑level nav config */
const NAV = [
  { label: "Home", href: "/" },
  { label: "Guides", href: "/guides/" },
  { label: "Type 1 Diabetes", href: "/guides/type-1-diabetes/" },
  { label: "Heart & Circulation", href: "/guides/heart-circulation/" },
  { label: "Cancer", href: "/guides/cancer/" }, // renamed
  { label: "Contact", href: "/contact/" },
];

/** Props coming in like: <Layout frontmatter={...}> */
const { frontmatter = {} } = Astro.props;

/** Safe defaults */
const siteTitle = "Patient Guide";
const siteTagline = "Clear, practical health guides — no fluff.";

// Extract known frontmatter with fallbacks
const {
  title = siteTitle,
  description = siteTagline,
  publishDate,      // optional
  updatedDate,      // optional
  canonicalUrl: fmCanonical, // optional
  schemaType,       // optional override for JSON‑LD
} = frontmatter;

// Only render canonical if explicitly provided
const canonical =
  typeof fmCanonical === "string" && fmCanonical.trim().length > 0
    ? fmCanonical
    : undefined;

// Build minimal JSON‑LD; choose type if provided
const ldType = typeof schemaType === "string" && schemaType ? schemaType : "WebPage";
const jsonLd = {
  "@context": "https://schema.org",
  "@type": ldType,
  name: title,
  headline: title,
  description,
  url: canonical,
  datePublished: publishDate,
  dateModified: updatedDate,
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Feed autodiscovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="patientguide.io — Updates"
      href="/rss.xml"
    />

    <!-- Canonical (optional) -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Title & Description -->
    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    {title && <meta property="og:title" content={title} />}
    {description && <meta property="og:description" content={description} />}
    {canonical && <meta property="og:url" content={canonical} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    {title && <meta name="twitter:title" content={title} />}
    {description && <meta name="twitter:description" content={description} />}

    <!-- JSON-LD (only include defined fields) -->
    <script type="application/ld+json">
      {JSON.stringify(
        Object.fromEntries(
          Object.entries(jsonLd).filter(([, v]) => v !== undefined && v !== null && v !== "")
        )
      )}
    </script>

    <!-- Allow pages to inject extra head tags -->
    <slot name="head" />
  </head>
  <body>
    <header>
      <nav>
        {NAV.map((item, i) => (
          <>
            <a href={item.href}>{item.label}</a>{i < NAV.length - 1 ? " | " : ""}
          </>
        ))}
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <small>
        © {new Date().getFullYear()} patientguide.io · <a href="/contact/">Contact</a>
      </small>
    </footer>
  </body>
</html>

<style>
  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji", sans-serif;
    background: #f8fafc;
  }
  header, footer {
    max-width: 960px;
    margin: 0 auto;
    padding: 1rem;
  }
  nav a { margin-right: .75rem; text-decoration: none; color: #2563eb; }
  nav a:hover { text-decoration: underline; }
  main { max-width: 960px; margin: 0 auto; padding: 1.5rem; }
</style>
