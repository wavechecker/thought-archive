/*
  Layout.astro
  Receives `frontmatter` from pages and injects SEO meta tags.
*/
const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Page Title & Description -->
    <title>{frontmatter?.title ?? "Thought Archive"}</title>
    <meta name="description" content={frontmatter?.description ?? ""} />

    <!-- Open Graph -->
    <meta property="og:type"        content="article" />
    <meta property="og:title"       content={frontmatter?.title} />
    <meta property="og:description" content={frontmatter?.description} />
    <meta property="og:url"         content={Astro.site + Astro.url.pathname} />

    <!-- Twitter Card -->
    <meta name="twitter:card"        content="summary_large_image" />
    <meta name="twitter:title"       content={frontmatter?.title} />
    <meta name="twitter:description" content={frontmatter?.description} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        headline:       frontmatter?.title,
        description:    frontmatter?.description,
        datePublished:  frontmatter?.publishDate, // ✅ updated to match new schema
        url:            Astro.site + Astro.url.pathname,
      })}
    </script>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a> | 
        <a href="/posts/">Posts</a> | 
        <a href="/guides/">Guides</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <small>© {new Date().getFullYear()} Thought Archive</small>
    </footer>
  </body>
</html>

<style>
  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: system-ui, sans-serif;
  }
  header, footer {
    max-width: 960px;
    margin: 0 auto;
    padding: 1rem;
  }
  nav a { margin-right: .75rem; text-decoration: none; color: #2563eb; }
  nav a:hover { text-decoration: underline; }
  main { max-width: 960px; margin: 0 auto; padding: 1.5rem; }
</style>
