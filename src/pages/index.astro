---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { isValidDate, fmt } from "@/lib/date";
import { getWeeklyFeaturedHubs } from "@/lib/featuredHubs";

// Helpers with defensive date rendering
const safeDate = (d: unknown) => (isValidDate(d) ? fmt(d) : null);
const safeCat = (c: unknown) => (typeof c === "string" && c.trim().length ? c.trim() : "General");
const safeSlug = (s: unknown) => (typeof s === "string" ? s : "");

// Guides: exclude drafts + Guide Hubs, sort newest first
const guides = (await getCollection("guides", ({ data }) =>
  data?.draft !== true && data?.category !== "Guide Hubs"
)).sort((a, b) => {
  const da = new Date(a.data?.updatedDate ?? a.data?.publishDate ?? 0).valueOf();
  const db = new Date(b.data?.updatedDate ?? b.data?.publishDate ?? 0).valueOf();
  return db - da || String(a.data?.title ?? "").localeCompare(String(b.data?.title ?? ""));
});

// Posts: exclude drafts, newest first, latest 5
const posts = (await getCollection("posts"))
  .filter((p) => p.data?.draft !== true)
  .sort((a, b) => {
    const da = new Date(a.data?.updatedDate ?? a.data?.publishDate ?? 0).valueOf();
    const db = new Date(b.data?.updatedDate ?? b.data?.publishDate ?? 0).valueOf();
    return db - da || String(a.data?.title ?? "").localeCompare(String(b.data?.title ?? ""));
  })
  .slice(0, 5);

// Page meta
const frontmatter = {
  title: "PatientGuide.io — Clear, practical health guides",
  description: "Evidence-based health guides on metabolic health, chronic disease, and everyday decisions. No fluff.",
};

// Featured guide hubs (rotates weekly)
const featuredHubs = getWeeklyFeaturedHubs(4);
---

<Layout {frontmatter}>
  <!-- Hero -->
  <section class="pg-hero">
    <h1 class="pg-hero__title">Clear, practical health guides</h1>
    <p class="pg-hero__subtitle">
      Evidence-based content on metabolic health, chronic disease, and everyday health decisions — no fluff, no sensationalism.
    </p>
    <a href="/guides/" class="pg-btn pg-btn--primary pg-hero__cta">
      Browse All Guides
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </section>

  <!-- Featured Guide Hubs -->
  <section class="pg-section">
    <div class="pg-section__header">
      <h2 class="pg-section__title">Featured Guide Hubs</h2>
      <p class="pg-section__subtitle">Curated topic hubs — rotates weekly</p>
    </div>

    <div class="pg-card-grid">
      {featuredHubs.map((hub) => (
        <article class="pg-card pg-card--interactive">
          <h3 class="pg-card__title">
            <a href={hub.href} class="pg-card__link">{hub.title}</a>
          </h3>
          <p class="pg-card__description">{hub.description}</p>
        </article>
      ))}
    </div>
  </section>

  <!-- Latest Posts -->
  {posts.length > 0 && (
    <section class="pg-section">
      <div class="pg-section__header">
        <h2 class="pg-section__title">Latest Posts</h2>
      </div>

      <div class="pg-list">
        {posts.map((p) => {
          const href = `/posts/${safeSlug(p.slug)}`;
          const title = p.data?.title ?? "(Untitled)";
          const desc = p.data?.description ?? "";
          const date = safeDate(p.data?.updatedDate ?? p.data?.publishDate);
          return (
            <article class="pg-list__item">
              <div class="pg-list__content">
                <h3 class="pg-list__title">
                  <a href={href}>{title}</a>
                </h3>
                {desc && <p class="pg-list__description">{desc}</p>}
              </div>
              {date && <time class="pg-list__date">{date}</time>}
            </article>
          );
        })}
      </div>

      <a href="/posts/" class="pg-btn pg-btn--secondary pg-section__cta">
        Browse all posts
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </section>
  )}

  <!-- Latest Guides -->
  <section class="pg-section">
    <div class="pg-section__header">
      <h2 class="pg-section__title">Latest Guides</h2>
      <p class="pg-section__subtitle">Recently updated health guides</p>
    </div>

    {guides.length === 0 ? (
      <p>No guides yet.</p>
    ) : (
      <div class="pg-list">
        {guides.slice(0, 8).map((e) => {
          const href = `/guides/${safeSlug(e.slug)}`;
          const title = e.data?.title ?? "(Untitled)";
          const desc = e.data?.description ?? "";
          const cat = safeCat(e.data?.category);
          const rawDate = e.data?.updatedDate ?? e.data?.publishDate;
          const prettyDate = safeDate(rawDate);

          return (
            <article class="pg-list__item">
              <div class="pg-list__content">
                <div class="pg-list__meta">
                  <span class="pg-badge">{cat}</span>
                  {prettyDate && <time class="pg-list__date">{prettyDate}</time>}
                </div>
                <h3 class="pg-list__title">
                  <a href={href}>{title}</a>
                </h3>
                {desc && <p class="pg-list__description">{desc}</p>}
              </div>
            </article>
          );
        })}
      </div>
    )}

    <a href="/guides/" class="pg-btn pg-btn--secondary pg-section__cta">
      View all guides
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </section>
</Layout>

<style>
  /* Hero */
  .pg-hero {
    padding: var(--pg-space-8) 0 var(--pg-space-12);
    text-align: center;
    max-width: 40rem;
    margin: 0 auto;
  }

  .pg-hero__title {
    font-size: var(--pg-text-4xl);
    font-weight: 700;
    line-height: var(--pg-leading-tight);
    color: var(--pg-text);
    margin: 0 0 var(--pg-space-4);
  }

  .pg-hero__subtitle {
    font-size: var(--pg-text-lg);
    color: var(--pg-text-soft);
    line-height: var(--pg-leading-relaxed);
    margin: 0 0 var(--pg-space-6);
  }

  .pg-hero__cta {
    font-size: var(--pg-text-base);
  }

  @media (max-width: 640px) {
    .pg-hero {
      padding: var(--pg-space-4) 0 var(--pg-space-8);
    }
    .pg-hero__title {
      font-size: var(--pg-text-3xl);
    }
  }

  /* Sections */
  .pg-section {
    margin-top: var(--pg-space-12);
  }

  .pg-section__header {
    margin-bottom: var(--pg-space-6);
  }

  .pg-section__title {
    font-size: var(--pg-text-2xl);
    font-weight: 600;
    color: var(--pg-text);
    margin: 0 0 var(--pg-space-2);
  }

  .pg-section__subtitle {
    font-size: var(--pg-text-base);
    color: var(--pg-text-muted);
    margin: 0;
  }

  .pg-section__cta {
    margin-top: var(--pg-space-6);
  }

  /* Card grid */
  .pg-card-grid {
    display: grid;
    gap: var(--pg-space-5);
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .pg-card__link {
    color: inherit;
    text-decoration: none;
  }

  .pg-card__link::after {
    content: "";
    position: absolute;
    inset: 0;
  }

  .pg-card {
    position: relative;
  }

  .pg-card .pg-badge {
    margin-bottom: var(--pg-space-3);
  }

  /* List */
  .pg-list {
    display: flex;
    flex-direction: column;
    gap: var(--pg-space-1);
  }

  .pg-list__item {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--pg-space-4);
    padding: var(--pg-space-4) var(--pg-space-5);
    background: var(--pg-surface);
    border: 1px solid var(--pg-border);
    border-radius: var(--pg-radius-lg);
    transition: border-color var(--pg-transition-fast), box-shadow var(--pg-transition-fast);
  }

  .pg-list__item:hover {
    border-color: var(--pg-border-muted);
    box-shadow: var(--pg-shadow-sm);
  }

  .pg-list__content {
    flex: 1;
    min-width: 0;
  }

  .pg-list__meta {
    display: flex;
    align-items: center;
    gap: var(--pg-space-3);
    margin-bottom: var(--pg-space-2);
  }

  .pg-list__title {
    font-size: var(--pg-text-base);
    font-weight: 600;
    margin: 0 0 var(--pg-space-1);
    line-height: var(--pg-leading-snug);
  }

  .pg-list__title a {
    color: var(--pg-text);
    text-decoration: none;
  }

  .pg-list__title a:hover {
    color: var(--pg-link);
    text-decoration: underline;
  }

  .pg-list__description {
    font-size: var(--pg-text-sm);
    color: var(--pg-text-soft);
    margin: 0;
    line-height: var(--pg-leading-relaxed);
  }

  .pg-list__date {
    font-size: var(--pg-text-xs);
    color: var(--pg-text-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .pg-list__item {
      flex-direction: column;
      gap: var(--pg-space-2);
    }
    .pg-list__date {
      order: -1;
    }
  }
</style>
