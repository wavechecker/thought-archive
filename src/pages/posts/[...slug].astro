---
import { getCollection, getEntryBySlug } from "astro:content";
import { isValidDate, fmt } from "@/lib/date";
import Layout from "@/layouts/Layout.astro";

import StratBox from "@/components/StratBox.astro";
import EvidenceBox from "@/components/EvidenceBox.astro";

export const prerender = true;

const mdxComponents = { StratBox, EvidenceBox };

export async function getStaticPaths() {
  const entries = await getCollection("posts", ({ data }) => data?.draft !== true);
  return entries.map((e) => ({ params: { slug: String(e.slug) } }));
}

const slugParam = Astro.params.slug;
const slug = Array.isArray(slugParam) ? slugParam.join("/") : (slugParam ?? "");
if (!slug) return Astro.redirect("/404");

const entry = await getEntryBySlug("posts", slug);
if (!entry || entry.data?.draft === true) return Astro.redirect("/404");

const { Content } = await entry.render({ components: mdxComponents });

const data = entry.data;

// Defensive date rendering
const pubDate = isValidDate(data.publishDate) ? fmt(data.publishDate) : null;
const modDate = isValidDate(data.updatedDate) ? fmt(data.updatedDate) : null;
const showUpdated = modDate && modDate !== pubDate;

// Reading time estimate
const wordCount = entry.body?.split(/\s+/).length ?? 0;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

const heroLocal = data?.image ?? data?.heroImage ?? null;

const frontmatter = {
  title: `${data.title} â€” PatientGuide.io`,
  description: data.description ?? "",
};
---

<Layout {frontmatter}>
  <article class="pg-article">
    <header class="pg-article__header">
      <span class="pg-article__label">Post</span>
      <h1 class="pg-article__title">{data?.title ?? "Untitled"}</h1>
      {data.description && <p class="pg-article__description">{data.description}</p>}

      <div class="pg-article__meta">
        {pubDate && (
          <span class="pg-article__date">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <time datetime={data.publishDate?.toString()}>{pubDate}</time>
          </span>
        )}
        {showUpdated && (
          <span class="pg-article__updated">
            Updated: <time datetime={data.updatedDate?.toString()}>{modDate}</time>
          </span>
        )}
        <span class="pg-article__reading-time">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          {readingTime} min read
        </span>
      </div>

      {heroLocal && (
        <img
          src={heroLocal}
          alt={data?.title ?? "Post hero image"}
          class="pg-article__hero"
          loading="lazy"
        />
      )}
    </header>

    <div class="pg-article__content prose">
      <Content components={mdxComponents} />
    </div>

    <footer class="pg-article__footer">
      <a href="/posts/" class="pg-btn pg-btn--secondary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Posts
      </a>
    </footer>
  </article>
</Layout>

<style>
  .pg-article {
    max-width: var(--pg-max-width-prose);
    margin: 0 auto;
  }

  .pg-article__header {
    margin-bottom: var(--pg-space-8);
    padding-bottom: var(--pg-space-6);
    border-bottom: 1px solid var(--pg-border);
  }

  .pg-article__label {
    display: inline-block;
    font-size: var(--pg-text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--pg-text-muted);
    margin-bottom: var(--pg-space-2);
  }

  .pg-article__title {
    font-size: var(--pg-text-3xl);
    font-weight: 700;
    line-height: var(--pg-leading-tight);
    color: var(--pg-text);
    margin: 0 0 var(--pg-space-4);
  }

  @media (min-width: 640px) {
    .pg-article__title {
      font-size: var(--pg-text-4xl);
    }
  }

  .pg-article__description {
    font-size: var(--pg-text-lg);
    color: var(--pg-text-soft);
    line-height: var(--pg-leading-relaxed);
    margin: 0 0 var(--pg-space-4);
  }

  .pg-article__meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--pg-space-4);
    font-size: var(--pg-text-sm);
    color: var(--pg-text-muted);
    margin-bottom: var(--pg-space-6);
  }

  .pg-article__date,
  .pg-article__reading-time {
    display: inline-flex;
    align-items: center;
    gap: var(--pg-space-2);
  }

  .pg-article__date svg,
  .pg-article__reading-time svg {
    opacity: 0.7;
  }

  .pg-article__updated {
    color: var(--pg-text-muted);
  }

  .pg-article__hero {
    width: 100%;
    aspect-ratio: 1200 / 630;
    object-fit: cover;
    border-radius: var(--pg-radius-xl);
    margin-top: var(--pg-space-4);
  }

  .pg-article__content {
    line-height: var(--pg-leading-loose);
  }

  .pg-article__footer {
    margin-top: var(--pg-space-12);
    padding-top: var(--pg-space-6);
    border-top: 1px solid var(--pg-border);
  }
</style>
