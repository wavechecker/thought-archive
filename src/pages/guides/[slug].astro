---
export const prerender = true;
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro'; // adjust if your Layout lives elsewhere

export async function getStaticPaths() {
  const guides = await getCollection('guides');
  return guides.map((guide) => ({
    params: { slug: guide.slug }, // e.g. "hypertension-the-silent-killer.en"
    props: { guide },
  }));
}

const { guide } = Astro.props;
const { Content } = await guide.render();
const pubDate =
  guide.data.date instanceof Date
    ? guide.data.date.toISOString().slice(0, 10)
    : String(guide.data.date);
---

<Layout>
  <article class="prose mx-auto max-w-3xl px-4 py-8">
    <header class="mb-6">
      <h1 class="mb-2">{guide.data.title}</h1>
      <p class="text-sm opacity-70">{pubDate}</p>
      {guide.data.description && <p class="mt-2">{guide.data.description}</p>}
    </header>

    <Content />
  </article>
</Layout>
