---
import { getEntryBySlug } from "astro:content";
const { slug } = Astro.params;
const entry = await getEntryBySlug("guides", slug);
if (!entry) return Astro.redirect("/404");
const { Content, data } = await entry.render();
---
<html lang="en">
  <head><meta charset="utf-8" /><title>{data.title}</title></head>
  <body>
    <main style="max-width:960px;margin:0 auto;padding:1.5rem;font-family:system-ui,sans-serif;">
      <h1>{data.title}</h1>
      <Content />
    </main>
  </body>
</html>




