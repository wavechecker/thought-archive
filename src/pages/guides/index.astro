const guides = (await getCollection("guides"))
  .sort((a, b) => (a.data.publishDate < b.data.publishDate ? 1 : -1));
---

<Layout title="Guides" description="Reference guides and resources.">
  <h1>Guides</h1>
  <ul style="list-style:none; padding:0; margin:0;">
    {guides.map((g) => (
      <li style="border-bottom:1px solid #e5e7eb; padding:0 0 1rem; margin:0 0 1rem;">
        <h2 style="margin:0 0 .25rem;">
          <a href={`/guides/${g.slug}/`}>{g.data.title}</a>     {/* âœ… g.slug */}
        </h2>
        <p class="muted" style="margin:.25rem 0 .75rem;">
          {isValidDate(g.data.publishDate) ? fmt(g.data.publishDate) : g.data.publishDate}
          {g.data.updatedDate && ` â€¢ Updated ${fmt(g.data.updatedDate)}`}
        </p>
        <p style="margin:0;">{g.data.description}</p>
      </li>
    ))}
  </ul>
</Layout>



