---
import { getCollection } from "astro:content";
import { isValidDate, fmt } from "@/lib/date";

const posts = await getCollection("guides");

// Sort by latest date available
posts.sort((a, b) => {
  const da = isValidDate(a.data.publishDate)
    ? +a.data.publishDate
    : isValidDate(a.data.updatedDate)
      ? +a.data.updatedDate
      : 0;

  const db = isValidDate(b.data.publishDate)
    ? +b.data.publishDate
    : isValidDate(b.data.updatedDate)
      ? +b.data.updatedDate
      : 0;

  return db - da;
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
